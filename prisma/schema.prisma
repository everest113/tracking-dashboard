// Prisma schema for Vercel Postgres (PostgreSQL via Neon)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Shipment {
  id                 Int       @id @default(autoincrement())
  poNumber           String    @map("po_number") @db.VarChar(255)
  trackingNumber     String    @unique @map("tracking_number") @db.VarChar(255)
  carrier            String?   @db.VarChar(100)
  status             String    @default("pending") @db.VarChar(50)
  origin             String?   @db.Text
  destination        String?   @db.Text
  shippedDate        DateTime? @map("shipped_date")
  estimatedDelivery  DateTime? @map("estimated_delivery")
  deliveredDate      DateTime? @map("delivered_date")
  lastChecked        DateTime? @map("last_checked")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  
  trackingEvents     TrackingEvent[]

  @@index([poNumber], map: "idx_po_number")
  @@index([status], map: "idx_status")
  @@map("shipments")
}

model TrackingEvent {
  id         Int      @id @default(autoincrement())
  shipmentId Int      @map("shipment_id")
  status     String?  @db.VarChar(50)
  location   String?  @db.Text
  message    String?  @db.Text
  eventTime  DateTime? @map("event_time")
  createdAt  DateTime @default(now()) @map("created_at")
  
  shipment   Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)

  @@index([shipmentId], map: "idx_shipment_id")
  @@map("tracking_events")
}
